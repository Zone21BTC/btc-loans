{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Zone21 Provider Risk-Score File",
  "description": "Schema for a single Bitcoin-backed loan product treated as an independent provider. Source files contain ONLY raw inputs: 13 factor scores, explanatory notes, optional evidence, and metadata (including a unique slug). Derived outputs—bonus/critical penalties, final_score, risk_band—are generated automatically by CI and therefore must not appear in provider JSON files.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "provider_name",
    "slug",
    "model_version",
    "highlights",
    "introduction",
    "details",
    "factors",
    "status"
  ],

  "properties": {
    "provider_name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name of the loan provider / product."
    },

    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3,
      "description": "URL-safe, lowercase kebab-case identifier used to distinguish this provider (e.g. 'unchained', 'ledn-rehypothecated'). Must be unique across the repository."
    },

    "model_version": {
      "type": "string",
      "pattern": "^\\d+\\.0$",
      "description": "Version of the Zone21 risk‑scoring methodology this file conforms to. Major releases only (e.g. '1.0', '2.0', '3.0'). Increment when the underlying model rules change in a non‑backwards‑compatible way."
    },

    "highlights": {
      "type": "string",
      "minLength": 1,
      "description": "Short narrative summary of key strengths / weaknesses."
    },

    "introduction": {
      "type": "string",
      "minLength": 1,
      "description": "Elevator pitch describing the provider."
    },

    "status": {
      "type": "string",
      "enum": ["active", "inactive", "withdrawn"],
      "default": "active",
      "description": "Operational status of this loan product."
    },

    "is_beta": {
      "type": "boolean",
      "description": "Optional flag indicating if the provider is a beta product. Beta providers will be sorted at the end of the aggregated list."
    },

    "notes": {
      "type": "string",
      "description": "Optional free‑form remarks not covered by factor notes."
    },

    "details": {
      "type": "object",
      "description": "Structured product details surfaced in the UI tables. The object itself is required, but every sub‑field is optional so analysts can populate them gradually.",
      "additionalProperties": false,
      "properties": {
        "launch_year": {
          "type": "integer",
          "minimum": 1900,
          "maximum": 2100,
          "description": "Calendar year the loan product went live (YYYY)."
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Canonical marketing or docs homepage for the provider."
        },
        "custody_model": {
          "type": "string",
          "enum": ["DeFi", "CeFi", "CeDeFi"],
          "description": "Custody classification. Choose one of 'DeFi', 'CeFi', or 'CeDeFi'."
        },
        "custodians": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Human‑readable list of keyholders or multisig thresholds (e.g. '3‑of‑4 multisig')."
        },
        "collateral_type": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Assets accepted as collateral (e.g. ['BTC'])."
        },
        "rehypothecation": {
          "type": "string",
          "enum": ["Yes", "No", "Limited"],
          "description": "Indicates whether collateral can be rehypothecated."
        },
        "kyc": {
          "type": "string",
          "enum": ["Yes", "No", "Varies"],
          "description": "KYC requirement for borrowers."
        },
        "loan_type": {
          "type": "array",
          "items": { "type": "string", "enum": ["Consumer", "Business"] },
          "description": "Loan purpose or audience (e.g. ['Consumer', 'Business'])."
        },
        "loan_currency": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Currencies a borrower can draw (e.g. ['USD', 'USDC'])."
        },
        "support_channels": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Customer support contact paths (e.g. ['Email', 'Chat'])."
        },
        "apr_type": { "$ref": "#/definitions/aprType" },
        "ltv": { "$ref": "#/definitions/valueMetric" },
        "margin_call": { "$ref": "#/definitions/valueArrayMetric" },
        "liquidation_ltv": { "$ref": "#/definitions/valueMetric" },
        "loan_value_min": { "$ref": "#/definitions/valueMetric" },
        "loan_value_max": { "$ref": "#/definitions/valueMetric" },
        "loan_duration_min": { "$ref": "#/definitions/valueMetric" },
        "loan_duration_max": { "$ref": "#/definitions/valueMetric" },
        "total_loan_issued": { "$ref": "#/definitions/valueMetric" }
      }
    },

    "factors": {
      "type": "object",
      "description": "The 13 risk factors. Each key is required and contains an object with a mandatory score (0/2/4/7/10) and explanatory note plus an optional array of evidence items.",
      "additionalProperties": false,
      "required": [
        "collateral",
        "rehypothecation",
        "custody",
        "security_governance",
        "platform",
        "oracle",
        "liquidation_buffer",
        "rate_and_term",
        "transparency",
        "loan_currency",
        "privacy",
        "history",
        "jurisdiction"
      ],
      "properties": {
        "collateral": { "$ref": "#/definitions/factor" },
        "rehypothecation": { "$ref": "#/definitions/factor" },
        "custody": { "$ref": "#/definitions/factor" },
        "security_governance": { "$ref": "#/definitions/factor" },
        "platform": { "$ref": "#/definitions/factor" },
        "oracle": { "$ref": "#/definitions/factor" },
        "liquidation_buffer": { "$ref": "#/definitions/factor" },
        "rate_and_term": { "$ref": "#/definitions/factor" },
        "transparency": { "$ref": "#/definitions/factor" },
        "loan_currency": { "$ref": "#/definitions/factor" },
        "privacy": { "$ref": "#/definitions/factor" },
        "history": { "$ref": "#/definitions/factor" },
        "jurisdiction": { "$ref": "#/definitions/factor" }
      }
    }
  },

  "definitions": {
    "scoreEnum": {
      "type": "integer",
      "enum": [0, 2, 4, 7, 10]
    },

    "evidenceItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["link", "type", "source_url", "created_at"],
      "properties": {
        "link": {
          "type": "string",
          "format": "uri",
          "description": "Public S3 URL to the image or PDF file uploaded as evidence."
        },
        "type": {
          "type": "string",
          "enum": ["image", "pdf"],
          "description": "File type of the evidence asset."
        },
        "source_url": {
          "type": "string",
          "format": "uri",
          "description": "Original web page where the evidence was captured."
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "UTC timestamp when the evidence was captured (ISO-8601)."
        }
      }
    },

    "factor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["score", "note"],
      "properties": {
        "score": { "$ref": "#/definitions/scoreEnum" },
        "note": { "type": "string", "minLength": 3, "description": "Short explanation for the assigned score." },
        "evidence": { "type": "array", "items": { "$ref": "#/definitions/evidenceItem" }, "description": "Optional list of evidence items supporting this score." }
      }
    },

    "valueMetric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string" },
        "note": { "type": "string" }
      }
    },

    "valueArrayMetric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "array", "items": { "type": "number" } },
        "unit": { "type": "string" },
        "note": { "type": "string" }
      }
    },

    "aprType": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "string" },
        "note": { "type": "string" }
      }
    }
  }
}
